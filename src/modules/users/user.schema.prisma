model User {
    id              String   @id @default(uuid())
    createdAt       DateTime @default(now()) @map("created_at")
    updatedAt       DateTime @default(now()) @map("updated_at")
    name            String
    email           String
    image           String?
    password        String
    passwordConfirm String   @map("password_confirm")

    @@map("user")
}

model Tour {
    id              String   @id @default(uuid())
    status          String   @default("active")
    createdAt       DateTime @default(now()) @map("created_at")
    updatedAt       DateTime @default(now()) @map("updated_at")
    name            String
    duration        Int
    maxGroupSize    Int      @map("max_group_size")
    difficulty      String
    ratingsAverage  Float    @default(4.5) @map("ratings_average")
    ratingsQuantity Float    @default(0) @map("ratings_quantity")
    price           Float
    summary         String?
    description     String
    imageCover      String   @map("image_cover")
    images          String[] @map("images")
    startDates      String[] @map("start_dates")
    priceDiscount   Float?   @default(0) @map("price_discount")

    @@map("tour")
}
